{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* important for CDK + DefinitelyTyped d.ts */
    "skipLibCheck": true,
    "exactOptionalPropertyTypes": false
  },
  "include": ["bin", "lib"]
}
