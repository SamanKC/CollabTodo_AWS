{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "outDir": "dist"
  },
  "include": [
    "bin",
    "lib"
  ],
  "exclude": [
    "node_modules",
    "cdk.out",
    "dist"
  ]
}
